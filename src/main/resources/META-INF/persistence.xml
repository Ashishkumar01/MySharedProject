<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="h2-db" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver"></property>
			<property name="javax.persistence.jdbc.url"	value="jdbc:h2:file:D:/H2/test;AUTO_SERVER=TRUE;AUTO_SERVER_PORT=9090;USER=admin;PASSWORD=admin">
			</property>
			<property name="javax.persistence.jdbc.user" value="admin" />
			<property name="eclipselink.ddl-genertion" value="create-tables" />
			<property name="eclipselink.logging.level" value="fine" />
		</properties>
	</persistence-unit>
</persistence>